{
  "name": "@ow3/table-vue",
  "version": "0.0.11",
  "description": "The easy & modern way to work with tables. Facet filtering, searching, pagination, ...",
  "author": "Open Web Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openwebstacks/table.git"
  },
  "bugs": {
    "url": "https://github.com/openwebstacks/table/issues"
  },
  "keywords": [
    "tables",
    "filters",
    "pagination",
    "sorting",
    "search",
    "component",
    "library",
    "vue",
    "typescript",
    "javascript"
  ],
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "exports": {
    ".": {
      "require": "./dist/table-vue.umd.js",
      "import": "./dist/table-vue.es.js"
    }
  },
  "main": "./dist/table-vue.umd.js",
  "module": "./dist/table-vue.es.js",
  "typings": "./dist/index.d.ts",
  "style": "dist/style.css",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.1.9"
  },
  "scripts": {
    "build": "vite build && vue-tsc --emitDeclarationOnly",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "coverage": "vitest run --coverage",
    "dev": "vite dev --open --port 3333",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "release": "npx bumpp package.json --execute 'pnpm run changelog' --commit 'chore(release): %s' --tag --push --all && npm publish",
    "test": "vitest",
    "test:e2e": "cypress open",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --emitDeclarationOnly"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.6.2",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "@vueform/multiselect": "^2.4.2",
    "element-plus": "^2.2.5",
    "install": "^0.13.0",
    "meilisearch": "^0.25.1",
    "vue-demi": "^0.13.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@babel/types": "^7.18.4",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/cz-commitlint": "^17.0.0",
    "@commitlint/types": "^17.0.0",
    "@headlessui/vue": "^1.6.4",
    "@iconify-json/heroicons-outline": "^1.1.1",
    "@iconify-json/heroicons-solid": "^1.1.1",
    "@types/node": "^17.0.31",
    "@unocss/preset-icons": "^0.38.1",
    "@unocss/preset-wind": "^0.38.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vueuse/core": "^8.6.0",
    "bumpp": "^7.1.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.17.0",
    "eslint-plugin-cypress": "^2.12.1",
    "inquirer": "^8.2.4",
    "lint-staged": "^13.0.1",
    "minimist": "^1.2.6",
    "prompts": "^2.4.2",
    "simple-git-hooks": "^2.8.0",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.7.3",
    "unocss": "^0.38.1",
    "unplugin-auto-import": "^0.8.7",
    "unplugin-vue-components": "^0.19.6",
    "upath": "^2.0.1",
    "vite": "^2.9.10",
    "vitest": "^0.14.1",
    "vue": "^3.2.37",
    "vue-tsc": "^0.37.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --config ./commitlint.config.ts --edit $1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
